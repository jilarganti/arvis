{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "header-max-length": [2, "always", 120],
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "sample"
      ]
    ],
    "scope-enum": [1, "always", ["arvis", "site", "link", "ai", "utils"]]
  }
}
