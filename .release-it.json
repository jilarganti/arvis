{
  "plugins": {
    "release-it-pnpm": {
      "disableRelease": true,
      "inFile": "CHANGELOG.md",
      "publishCommand": "vsce publish --no-dependencies"
    }
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": false
  },
  "hooks": {
    "before:init": [
      "git pull"
    ],
    "after:bump": "npx auto-changelog -p --tag-prefix v"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  }
}