{
  "name": "arvis-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "author": "SMYRNA INFORMATION TECHNOLOGY NETWORK SERVICES L.L.C",
  "description": "Arvis project monorepo: AI-enhanced video meetings",
  "homepage": "https://github.com/jilarganti/arvis",
  "bugs": "https://github.com/jilarganti/arvis/issues",
  "repository": "github:jilarganti/arvis",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "!apps/create-app/*"
  ],
  "keywords": [
    "ai",
    "videomeeting"
  ],
  "///": "================================================================================",
  "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
  "scripts": {
    "dev": "pnpm run --parallel -r dev",
    "build": "nx build arvis-app --verbose",
    "serve": "pnpm run --parallel -r serve",
    "changelog": "nx release --dry-run --verbose",
    "release": "nx release --skip-publish",
    "format": "prettier --write ."
  },
  "//": "================================================================================",
  "devDependencies": {
    "@nx/js": "^19.1.1",
    "nx": "19.1.1",
    "prettier": "^3.2.5"
  }
}