{
  "name": "arvis-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "author": "SMYRNA INFORMATION TECHNOLOGY NETWORK SERVICES L.L.C",
  "description": "Arvis project monorepo: AI-enhanced video meetings",
  "private": true,
  "homepage": "https://github.com/jilarganti/arvis",
  "bugs": "https://github.com/jilarganti/arvis/issues",
  "repository": "github:jilarganti/arvis",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "!apps/create-app/*"
  ],
  "keywords": [
    "ai",
    "videomeeting"
  ],
  "///": "================================================================================",
  "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s --commit-path .",
  "scripts": {
    "dev": "pnpm run --parallel -r dev",
    "build": "nx build arvis-app",
    "lint": "turbo lint",
    "lint:prettier": "turbo run lint:prettier",
    "docs:dev": "pnpm --filter=arvis-docs run dev",
    "docs:build": "pnpm --filter=arvis-docs run build",
    "docs:preview": "pnpm --filter=arvis-docs run docs:preview",
    "docs:serve": "pnpm --filter=arvis-docs run docs:serve",
    "release": "nx release",
    "format": "prettier --write ."
  },
  "//": "================================================================================",
  "devDependencies": {
    "nx": "19.1.0",
    "prettier": "^3.2.5"
  }
}