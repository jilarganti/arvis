{
    "name": "arvis-monorepo",
    "version": "0.0.0",
    "license": "MIT",
    "author": "SMYRNA INFORMATION TECHNOLOGY NETWORK SERVICES L.L.C",
    "description": "Arvis project monorepo: AI-enhanced video meetings",
    "homepage": "https://github.com/jilarganti/arvis",
    "bugs": "https://github.com/jilarganti/arvis/issues",
    "repository": "github:jilarganti/arvis",
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*",
        "!apps/create-app/*"
    ],
    "packageManager": "pnpm@9.2.0",
    "keywords": [
        "ai",
        "videomeeting"
    ],
    "scripts": {
        "dev": "pnpm --filter site dev",
        "build": "nx build a.r.v.i.s.",
        "preview": "pnpm --filter site preview",
        "lint": "node scripts/echo 'NO LINT STEP !!!!!!!!!!!!'",
        "test": "pnpm build && pnpm exec vitest --run && pnpm exec playwright test",
        "changelog": "export GH_TOKEN=$(gh auth token) && echo \"GH_TOKEN: $GH_TOKEN\" && nx reset && nx release --dry-run --verbose",
        "release": "export GH_TOKEN=$(gh auth token) && nx release --skip-publish",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@nx/js": "^19.3.0",
        "@playwright/test": "^1.44.1",
        "@types/node": "^20.14.2",
        "@vercel/remote-nx": "^2.0.0",
        "chalk": "^5.3.0",
        "msw": "^1.3.3",
        "nx": "19.1.1",
        "prettier": "^3.3.2",
        "vitest": "^1.6.0"
    }
}
