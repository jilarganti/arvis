{
    "compilerOptions": {
        "target": "es2018",
        "jsx": "preserve",
        "lib": ["esnext"],
        "module": "esnext",
        "moduleResolution": "Bundler",

        "paths": {
            "@packages/*": ["./packages/*"],
            "@arvis": ["./packages/a.r.v.i.s./src/index"],
            "@utils": ["./packages/utils/src/index"],
            "@site/*": ["./packages/site/.vitepress/config/*"]
        },
        "resolveJsonModule": true,
        "types": ["node", "vitest/importMeta"],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": ["./packages/**/*"],
    "exclude": ["node_modules", "**/*.e2e.ts"] //! TODO: Del "**/*.e2e.ts"
}
