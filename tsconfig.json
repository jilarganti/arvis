{
    "compilerOptions": {
        "target": "es2018",
        "jsx": "preserve",
        "lib": ["esnext"],
        "module": "esnext",
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "paths": {
            "arvis": ["./apps/a.r.v.i.s./src/index.ts"],
            "@arvis/site": ["./apps/site/src/index.md"],
            "@arvis/utils/*": ["./package/utils/src/*"]
        },
        "resolveJsonModule": true,
        "types": ["node", "vite/client", "vitest/importMeta"],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "exclude": ["**/dist/**", "**/node_modules/**", "**/examples/**", "**/test/dts/**"]
}
