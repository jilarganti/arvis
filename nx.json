{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "nxCloudAccessToken": "MDk0OGE2MzgtYjA3MC00NDFhLWIyNjItYjE4ZmU1MWIwYmJmfHJlYWQtd3JpdGU=",
    "release": {
        "projects": [ "*", "!create-app", "!link" ],
        "version": {
            "conventionalCommits": true,

            "update": "in-bump",
            "bump": "release",
            "tag": "release",
            "defaultBase": "main",
            "baseBranch": "main",
            "mainBranch": "main",
            "prerelease": "alpha",
            "prereleaseBranch": "main",
            "defaultVersion": "0.0.0",
            "updateStrategy": "increase",
            "tracks": [
                {
                    "track": "latest",
                    "default": true
                },
                {
                    "track": "next"
                }
            ],
            "changelog": "github",
            "ci": "github",
            "ciOptions": {
                "github": {
                    "publish": true
                }
            },
            "npm": {
                "publish": false
            },
            "build": true,
            "buildOptions": {
                "createPackageJson": true
            },
            "publish": true,

            "generatorOptions": {
                "installArgs": "--no-optional"
            }
        }
    },

    "tasksRunnerOptions": {
        "another": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": [ "build", "test" ]
            }
        }
    },

    "targetDefaults": {
        "build": {
            "dependsOn": [ "^build" ],
            "cache": true
        },
        "dev": {
            "dependsOn": [ "^build" ]
        },
        "test": {
            "dependsOn": [ "^test" ],
            "inputs": [ "{projectRoot}/**/*.{md}" ]
        }
    }
}